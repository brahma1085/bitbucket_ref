	</bean>

	<bean id="objectGroupDao" class="com.sssoft.isatt.data.dao.impl.input.ObjectGroupDaoImpl">
		<property name="dataSource" ref="dataSource" />
		<property name="screenDao" ref="screenDao" />
	</bean>

	<bean id="objectsDao" class="com.sssoft.isatt.data.dao.impl.input.ObjectsDaoImpl">
		<property name="dataSource" ref="dataSource" />
		<property name="objectTypeDao" ref="objectTypeDao" />
