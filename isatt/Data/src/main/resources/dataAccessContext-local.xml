	</bean>


	<bean id="taskDao" class="com.sssoft.isatt.data.dao.impl.input.TaskDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="testCaseDao" class="com.sssoft.isatt.data.dao.impl.input.TestCaseDaoImpl">
		<property name="dataSource" ref="dataSource" />
		<property name="appFunctionalityDao" ref="appFunctionalityDao" />
		<property name="appFeatureDao" ref="appFeatureDao" />
		<property name="scenarioCaseMappingDao" ref="scenarioCaseMappingDao" />
		<property name="caseStepMappingDao" ref="caseStepMappingDao" />
	</bean>

	<bean id="testConditionDataDao"
		class="com.sssoft.isatt.data.dao.impl.input.TestConditionDataDaoImpl">
