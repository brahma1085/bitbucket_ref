	</bean>







	<!-- Beans for Injecting Dependencies for Output DAO Implementations -->

	<bean id="laneResultsDao"
		class="com.sssoft.isatt.data.dao.impl.output.LaneResultsDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="taskResultDao" class="com.sssoft.isatt.data.dao.impl.output.TaskResultDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="testCaseResultDao"
		class="com.sssoft.isatt.data.dao.impl.output.TestCaseResultDaoImpl">
