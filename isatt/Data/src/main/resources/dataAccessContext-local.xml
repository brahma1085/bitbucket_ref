<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<!-- - Application context definition for Data module's data access layer. 
	- Accessed by business layer objects defined in "applicationContext.xml" 
	- This version of the data access layer works on a combined database, using 
	a local DataSource with DataSourceTransactionManager. It does not - need 
	any JTA support in the container: It will run as-is in plain Tomcat. -->
<beans>

	<!-- ========================= RESOURCE DEFINITIONS ========================= -->
	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close">
		<property name="driverClassName" value="${driverClassName}" />
		<property name="url" value="${url}" />
		<property name="username" value="${username}" />
		<property name="password" value="${password}"></property>
	</bean>

	<!-- Transaction manager for a single JDBC DataSource -->
	<!-- (see dataAccessContext-jta.xml for an alternative) -->
	<bean id="transactionManager"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<!-- ======== DAO DEFINITIONS: Spring Data IMPLEMENTATIONS ========= -->

	<!-- Beans for Injecting Dependencies for DAO Implementations -->

	<bean id="actionsDao" class="com.sssoft.isatt.data.dao.impl.ActionsDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="agentDetailsDao" class="com.sssoft.isatt.data.dao.impl.AgentDetailsDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="appFeatureDao" class="com.sssoft.isatt.data.dao.impl.AppFeatureDaoImpl">
		<property name="dataSource" ref="dataSource" />
		<property name="appFunctionalityDao" ref="appFunctionalityDao" />
	</bean>

	<bean id="appFunctionalityDao" class="com.sssoft.isatt.data.dao.impl.AppFunctionalityDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="applicationDao" class="com.sssoft.isatt.data.dao.impl.ApplicationDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="genericDataDao" class="com.sssoft.isatt.data.dao.impl.GenericDataDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="runnerDao" class="com.sssoft.isatt.data.dao.impl.RunnerDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="schedulerDao" class="com.sssoft.isatt.data.dao.impl.SchedulerDaoImpl">
		<property name="dataSource" ref="dataSource" />
		<property name="testPlanDao" ref="testPlanDao" />
		<property name="testDataDao" ref="testDataDao" />
	</bean>

	<bean id="schedulerBackupDao" class="com.sssoft.isatt.data.dao.impl.SchedulerBackupDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="schedulerLaneDetailsDao"
		class="com.sssoft.isatt.data.dao.impl.SchedulerLaneDetailsDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="schedulerRunDetailsDao"
		class="com.sssoft.isatt.data.dao.impl.SchedulerRunDetailsDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="screenDao" class="com.sssoft.isatt.data.dao.impl.ScreenDaoImpl">
		<property name="dataSource" ref="dataSource" />
		<property name="appFeatureDao" ref="appFeatureDao" />
	</bean>


	<bean id="usersDao" class="com.sssoft.isatt.data.dao.impl.UsersDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="userRolesDao" class="com.sssoft.isatt.data.dao.impl.UserRolesDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="usersApplicationMappingDao"
		class="com.sssoft.isatt.data.dao.impl.UsersApplicationMappingDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="rolesDao" class="com.sssoft.isatt.data.dao.impl.RolesDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<!-- Beans for Icom.sssoft.isatt.data.dao.impl.inputt DAO Implementations -->

	<bean id="conditionGroupDao"
		class="com.sssoft.isatt.data.dao.impl.input.ConditionGroupDaoImpl">
