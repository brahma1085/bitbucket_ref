<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee   http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<servlet>
		<servlet-name>EmployeeServlet</servlet-name>
		<servlet-class>edu.servlet.EmployeeServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>StudentServlet</servlet-name>
		<servlet-class>edu.servlet.StudentServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>jsp1</servlet-name>
		<jsp-file>/WEB-INF/employee/employee.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>jsp2</servlet-name>
		<jsp-file>/WEB-INF/student/student.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>jsp3</servlet-name>
		<jsp-file>/WEB-INF/employee/employeesuccess.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>jsp4</servlet-name>
		<jsp-file>/WEB-INF/student/studentsuccess.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>jsp5</servlet-name>
		<jsp-file>/WEB-INF/common/failure.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>EmployeeServlet</servlet-name>
		<url-pattern>/EmployeeServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>StudentServlet</servlet-name>
		<url-pattern>/StudentServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>jsp1</servlet-name>
		<url-pattern>/j1</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>jsp2</servlet-name>
		<url-pattern>/j2</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>jsp3</servlet-name>
		<url-pattern>/j3</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>jsp4</servlet-name>
		<url-pattern>/j4</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>jsp5</servlet-name>
		<url-pattern>/j5</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>/WEB-INF/index.jsp</welcome-file>
	</welcome-file-list>
	<jsp-config>
		<taglib>
			<taglib-uri>http://java.sun.com/jsp/jstl/core</taglib-uri>
			<taglib-location>/WEB-INF/tld/c.tld</taglib-location>
		</taglib>
	</jsp-config>
	<login-config>
		<auth-method>BASIC</auth-method>
	</login-config>
</web-app>
