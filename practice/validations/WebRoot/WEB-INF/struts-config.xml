<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>
	<data-sources />
	<form-beans>
		<form-bean name="loginform" type="edu.struts.LoginForm" />
	</form-beans>
	<global-exceptions />
	<global-forwards />
	<action-mappings>
		<action attribute="loginform" input="/login.jsp" name="loginform"
			path="/login" type="edu.struts.LoginAction" validate="true">
			<forward name="failure" path="/failure.jsp" />
			<forward name="success" path="/success.jsp" />
		</action>
	</action-mappings>
	<message-resources parameter="edu.struts.ApplicationResources" />
</struts-config>

