<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>
	<form-beans>
		<form-bean name="registration" type="com.nit.form.RegistrationForm"></form-bean>
	</form-beans>
	<action-mappings>
		<action path="/registration1" name="registration"
			type="com.nit.action.Registration1Action">
			<forward name="success" path="/registration2.jsp"></forward>
		</action>
		<action path="/registration2" name="registration"
			type="com.nit.action.Registration2Action">
			<forward name="success" path="/success.jsp"></forward>
			<forward name="failure" path="/failure.jsp"></forward>
		</action>
	</action-mappings>
</struts-config>