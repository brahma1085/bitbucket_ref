<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>
	<form-beans>
		<form-bean name="accountform" type="com.nit.struts.AccountForm" />
	</form-beans>
	<action-mappings>
		<action attribute="accountform" name="accountform" path="/account"
			scope="request" type="com.nit.struts.AccountAction">
			<forward name="failure" path="/noaccount.jsp" />
			<forward name="success" path="/accountdetails.jsp" />
			<forward name="abnormal" path="/error.jsp"></forward>
		</action>
	</action-mappings>
	<message-resources parameter="com.yourcompany.struts.ApplicationResources" />
</struts-config>

